{
  "version": 1,
  "canisters": {
    "main_canister": {
      "type": "motoko",
      "main": "src/backend/main_canister/main.mo",
      "packtool": "cd src/backend/main_canister && mops sources"
    },
    "frontend": {
      "type": "assets",
      "source": ["src/frontend-vite-backup/dist"],
      "build": []
    }
  },
  "networks": {
    "local": {
      "bind": "0.0.0.0:4943",
      "type": "ephemeral"
    },
    "playground": {
      "providers": ["https://icp0.io"],
      "type": "persistent"
    }
  },
  "defaults": {
    "build": {
      "packtool": "mops sources"
    }
  }
}
